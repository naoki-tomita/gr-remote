{
  "name": "gr-remote",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "@types/styled-components": "^3.0.0",
    "@types/webpack": "^4.4.11",
    "chokidar-cli": "^1.2.1",
    "local-web-server": "^2.6.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "styled-components": "^3.4.5",
    "ts-loader": "^5.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "prestart": "run-s clean build",
    "start": "run-p watch serve",
    "build": "run-p build:*",
    "build:apps": "cp -r ./src/apps/. ./dist",
    "build:scripts": "webpack --require ts-node/register",
    "serve": "ws -d ./dist --spa /index.html",
    "watch": "run-p watch:*",
    "watch:apps": "chokidar \"./src/apps/*?\" -c \"yarn build:apps\"",
    "watch:scripts": "chokidar \"./src/scripts/**/*.ts\" \"./src/scripts/**/*.tsx\" -c \"yarn build:scripts\""
  },
  "devDependencies": {
    "webpack-command": "^0.4.1"
  }
}
